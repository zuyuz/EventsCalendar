<Window x:Class="EventsScheduler.DayEvents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventsScheduler"
        mc:Ignorable="d"
        Title="DayEvents" Height="300" Width="300">
    <Grid>
        <ListBox x:Name="listBoxEvents" HorizontalAlignment="Left" Height="250" Margin="10,10,0,0" VerticalAlignment="Top" Width="165"/>
        <Button x:Name="buttonShowEvent" Content="Show" HorizontalAlignment="Left" Margin="195,31,0,0" VerticalAlignment="Top" Width="75" Click="buttonShowEvent_Click"/>
        <Button x:Name="buttonDeleteEvent" Content="Delete" HorizontalAlignment="Left" Margin="195,91,0,0" VerticalAlignment="Top" Width="75" Click="buttonDeleteEvent_Click"/>
        <Button x:Name="buttonClose" Content="Close" HorizontalAlignment="Left" Margin="195,150,0,0" VerticalAlignment="Top" Width="75" Click="buttonClose_Click"/>

    </Grid>
</Window>
